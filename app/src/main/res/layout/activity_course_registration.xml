<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseRegistrationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/title">

        <ImageView
            android:id="@+id/imgRegistration"
            android:src="@drawable/course"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CourseRegistration"
            android:textSize="25sp"
            android:textColor="@color/DailyNews"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/poly"/>

    <Button
        android:id="@+id/btQLl"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="moQuanLyLop"
        android:text="Quản Lý Lớp"/>

    <Button
        android:id="@+id/btQLSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:onClick="moQuanLySinhVien"
        android:text="Quản Lý Sinh Viên"/>

    <Button
        android:id="@+id/btnDSLOP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        android:onClick="DanhsachLop"
        android:text="Danh Sách Lớp"/>
</LinearLayout>